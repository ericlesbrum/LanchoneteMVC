@using System.Globalization
@model Pedido
<div class="container marginTop1">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Client : <strong>@Model.Nome</strong></p>
            <p>Data do Pedido : <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do Pedido : <strong>@Model.Id</strong></p>
        </div>
        <table class="table">
            <tr>
                <th></th>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th>Preço</th>
            </tr>
            @foreach (var item in Model.PedidoItens)
            {
                <tr>
                    <td><span>@item.Lanche.ImagemUrl</span></td>
                    <td>@item.Quantidade</td>
                    <td>@item.Lanche.Nome</td>
                    <td>@item.Lanche.Preco</td>
                </tr>
            }
        </table>
        <div>
            <h4>Valor Total do Pedido :
                <strong>
                    @(((decimal)ViewBag.TotalPedido).ToString("C2",
                        CultureInfo.CreateSpecificCulture("pt-BR")))
                </strong>
            </h4>
        </div>
        <div class="form-group" style="text-align:center">
            <h3>
                <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
            </h3>
        </div>
    </div>
</div>